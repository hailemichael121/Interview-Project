generator client {
  provider   = "prisma-client-js"
  engineType = "binary"   // ðŸ‘ˆ Correct location
}

datasource db {
  provider = "postgresql"
  
}

// ========================================================
// ENUMS
// ========================================================

enum SectionType {
  TABLE_OF_CONTENTS
  EXECUTIVE_SUMMARY
  TECHNICAL_APPROACH
  DESIGN
  CAPABILITIES
  FOCUS_DOCUMENT
  NARRATIVE
}

enum Status {
  PENDING
  IN_PROGRESS
  COMPLETED
}

enum Role {
  OWNER
  REVIEWER
  MEMBER
  USER
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  REVOKED
  EXPIRED
}

// ========================================================
// AUTH MODELS
// ========================================================

model User {
  id            String   @id @default(cuid())
  name          String?
  email         String   @unique
  emailVerified Boolean?
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  banned        Boolean? @default(false)

  role      String?   @default("USER")
  tenantId  String?
  deletedAt DateTime?

  accounts        Account[]
  sessions        Session[]
  members         OrganizationMember[]
  reviewerProfile Reviewer?

  @@map("users")
}

model Account {
  id           String   @id @default(cuid())
  providerId   String
  accountId    String
  userId       String
  accessToken  String?
  refreshToken String?
  idToken      String?
  password     String?
  scopes       String[]
  tokenType    String?
  expiresAt    Int?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@map("accounts")
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  ipAddress String?
  userAgent String?
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ========================================================
// APPLICATION MODELS
// ========================================================

model Organization {
  id        String    @id @default(cuid())
  name      String
  slug      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  members  OrganizationMember[]
  invites  OrganizationInvite[]
  outlines Outline[]
  logs     InvitationLog[]

  @@map("organizations")
}

model OrganizationMember {
  id             String    @id @default(cuid())
  organizationId String
  userId         String
  role           Role
  joinedAt       DateTime  @default(now())
  deletedAt      DateTime?

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdOutlines Outline[]       @relation("CreatedOutlines")
  invitationsSent InvitationLog[] @relation("Inviter")

  @@unique([organizationId, userId])
  @@map("organization_members")
}

model OrganizationInvite {
  id             String    @id @default(cuid())
  organizationId String
  email          String
  role           String    @default("MEMBER")
  token          String    @unique
  expires        DateTime
  invitedById    String?
  deletedAt      DateTime?

  organization Organization    @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  logs         InvitationLog[]

  @@map("organization_invites")
}

model InvitationLog {
  id                 String           @id @default(cuid())
  inviteToken        String
  invitedEmail       String
  organizationId     String
  organizationSlug   String
  organizationName   String
  inviterMemberId    String
  status             InvitationStatus @default(PENDING)
  invitedAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  acceptedByUserId   String?
  acceptedByMemberId String?

  organization   Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  inviterMember  OrganizationMember @relation("Inviter", fields: [inviterMemberId], references: [id])
  originalInvite OrganizationInvite @relation(fields: [inviteToken], references: [token], onDelete: Cascade)

  @@index([invitedEmail])
  @@map("invitation_logs")
}

model Reviewer {
  id        String    @id @default(cuid())
  name      String    @unique
  deletedAt DateTime?

  userId String? @unique
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  outlines Outline[]

  @@map("reviewers")
}

model Outline {
  id                String      @id @default(cuid())
  header            String
  sectionType       SectionType
  status            Status      @default(PENDING)
  target            Int
  limit             Int
  reviewerId        String?
  organizationId    String
  createdByMemberId String
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt
  deletedAt         DateTime?

  createdBy    OrganizationMember @relation("CreatedOutlines", fields: [createdByMemberId], references: [id])
  organization Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  reviewer     Reviewer?          @relation(fields: [reviewerId], references: [id], onDelete: SetNull)

  @@map("outlines")
}
